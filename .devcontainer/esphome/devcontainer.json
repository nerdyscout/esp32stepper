{
    "name": "ESPHome",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--privileged",
        "--network=host"
    ],
    "settings": {
        "terminal.integrated.defaultProfile.linux": "/bin/bash"
    },
    "extensions": [
        "esphome.vscode-esphome"
    ],
    "remoteUser": "vscode"
}